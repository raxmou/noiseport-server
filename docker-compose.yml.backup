---
version: "2"


services:
  slskd:
    build:  
      context: .
      dockerfile: Dockerfile.slskd 
    container_name: slskd
    ports:
      - "5030:5030"
      - "5031:5031"
      - "50300:50300"
    environment:
      - SLSKD_REMOTE_CONFIGURATION=true
    volumes:
      - ./slskd:/app
      - /media/pi/Lexar/music:/music
      - /media/pi/Lexar/musiclibrary.db:/music/musiclibrary.db
      - ./shared:/shared
    restart: always
    networks:
      - rax-net
    labels:
      glance.name: slskd
      glance.hide: false
      glance.icon: https://avatars.githubusercontent.com/u/76762370?s=200&v=4
      glance.url: http://slskd.rax.zone
      glance.description: "Soudlseek file sharing network app"

  fastapi:
    build: .
    container_name: fastapi
    ports:
      - "8000:80"
    
    depends_on:
      - slskd
    restart: always
    networks:
      - rax-net
    labels:
      glance.name: FastAPI slskd endpoints
      glance.hide: false
      glance.icon: si:fastapi




networks:
  rax-net:
    external: true
