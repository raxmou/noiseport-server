# Application Configuration
APP_NAME=Downloader API
APP_VERSION=0.1.0
APP_DESCRIPTION=Production-ready FastAPI application for music downloading
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# SLSKD Configuration
SLSKD_HOST=http://slskd:5030
SLSKD_USERNAME=slskd
SLSKD_PASSWORD=slskd

# Navidrome Configuration
NAVIDROME_ENABLED=false
NAVIDROME_URL=
NAVIDROME_USERNAME=
NAVIDROME_PASSWORD=

# Jellyfin Configuration
JELLYFIN_ENABLED=false
JELLYFIN_URL=
JELLYFIN_USERNAME=
JELLYFIN_PASSWORD=

# Spotify Configuration
SPOTIFY_ENABLED=false
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Last.fm Configuration
LASTFM_API_KEY=
LASTFM_SECRET=

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_ORIGINS=["*"]
ALLOW_CREDENTIALS=true

# Database Configuration (if needed in future)
DATABASE_URL=sqlite:///./app.db

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PATH=/metrics

# File Storage
DOWNLOAD_PATH=/music/downloads
COMPLETE_PATH=/music/complete

# Music Paths
HOST_MUSIC_PATH=./music

# Features
SCROBBLING_ENABLED=false
DOWNLOADS_ENABLED=true
DISCOVERY_ENABLED=false